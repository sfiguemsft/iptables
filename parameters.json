{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsername": {
          "type": "string",
          "metadata": {
            "description": "Admin username"
          },
          "value": "azure"
        },
        "adminPassword": {
          "type": "securestring",
          "metadata": {
            "description": "Admin password"
          },
          "value": "Corp.123456!"
        },
        "vmNamePrefix": {
          "type": "string",
          "defaultValue": "myVM",
          "metadata": {
            "description": "VM name prefix"
          },
          "value": "myVM"
        },
        "lbName1": {
          "type": "string",
          "defaultValue": "myLB1",
          "metadata": {
            "description": "Load Balancer name"
          },
          "value": "myLB1"
        },
        "lbName2": {
          "type": "string",
          "defaultValue": "myLB2",
          "metadata": {
            "description": "Load Balancer name"
          },
          "value": "myLB2"
        },
        "nicNamePrefix": {
          "type": "string",
          "defaultValue": "nic",
          "metadata": {
            "description": "Network Interface Name Prefix"
          },
          "value": "nic"
        },
        "vnetName": {
          "type": "string",
          "defaultValue": "myVNET",
          "metadata": {
            "description": "VNET name"
          },
          "value": "myVNET"
        },
        "imagePublisher": {
          "type": "string",
          "defaultValue": "MicrosoftWindowsServer",
          "metadata": {
            "description": "Image Publisher"
          },
          "value": "MicrosoftWindowsServer"
        },
        "imageOffer": {
          "type": "string",
          "defaultValue": "WindowsServer",
          "metadata": {
            "description": "Image Offer"
          },
          "value": "WindowsServer"
        },
        "imageSKU": {
          "type": "string",
          "defaultValue": "2012-R2-Datacenter",
          "metadata": {
            "description": "Image SKU"
          },
          "value": "2012-R2-Datacenter"
        },
        "vmSize": {
          "type": "string",
          "defaultValue": "Standard_D3_v2",
          "allowedValues": [
            "Standard_D3_v2",
            "Standard_D8s_v3"
          ],
          "metadata": {
            "description": "VM Size"
          },
          "value": "Standard_D3_v2"
        }
      }
  }